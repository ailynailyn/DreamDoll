<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navy"
    android:layout_marginVertical="3dp"
    tools:context=".FallingShoesActivity"
    >

    <TextView
        android:id="@+id/leadershipBoardUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/leadershipBoardScore"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="username"
        android:gravity="left"
        android:textColor="@color/white_blue"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/leadershipBoardScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/leadershipBoardUsername"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="1,000"
        android:gravity="right"
        android:textColor="@color/white_blue"
        />

</androidx.constraintlayout.widget.ConstraintLayout>