<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/navy"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="250dp" />
    <ImageView
        android:layout_weight="2"
        android:src="@drawable/loading"
        android:layout_width="0dp"
        android:layout_height="200dp" />
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="250dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/news_feed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/custom0menu0box0dark"
            android:text="newsfeed"
            android:textColor="@color/gold"
            android:fontFamily="@font/questrial"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

            <Button
                android:layout_weight="7"
                android:id="@+id/create_character"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="@font/questrial"
                android:textSize="20sp"
                android:background="@drawable/custom0menu0box0light"
                android:textColor="@color/gold"
                android:text="create"
                />

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="7"
            android:id="@+id/edit_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/questrial"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:background="@drawable/custom0menu0box0light"
            android:textColor="@color/gold"
            android:text="edit"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="7"
            android:id="@+id/buy_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edit_character"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/earn_coins"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/questrial"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:background="@drawable/custom0menu0box0dark"
            android:textColor="@color/gold"
            android:text="shop"
            />

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="7"
            android:id="@+id/earn_coins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:fontFamily="@font/questrial"
            android:background="@drawable/custom0menu0box0dark"
            android:textColor="@color/gold"
            android:text="earn"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="7"
            android:id="@+id/account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:fontFamily="@font/questrial"
            android:background="@drawable/custom0menu0box0light"
            android:textColor="@color/gold"
            android:text="account"
            />

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="5"
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:fontFamily="@font/questrial"
            android:background="@drawable/custom0menu0box0light"
            android:textColor="@color/gold"
            android:text="logout"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</LinearLayout>