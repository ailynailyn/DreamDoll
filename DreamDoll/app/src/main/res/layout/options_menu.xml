<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/news_feed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/create_character"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="newsfeed"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/news_feed"
        app:layout_constraintBottom_toTopOf="@+id/create_character"
        android:background="@color/black"
        >
    </FrameLayout>

    <Button
        android:id="@+id/create_character"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/news_feed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_character"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="create character"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/create_character"
        app:layout_constraintBottom_toTopOf="@+id/edit_character"
        android:background="@color/black"
        >
    </FrameLayout>

    <Button
        android:id="@+id/edit_character"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/create_character"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buy_items"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="edit character"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_character"
        app:layout_constraintBottom_toTopOf="@+id/buy_items"
        android:background="@color/black"
        >
    </FrameLayout>

    <Button
        android:id="@+id/buy_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_character"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/earn_coins"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="buy items"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/buy_items"
        app:layout_constraintBottom_toTopOf="@+id/earn_coins"
        android:background="@color/black"
        >
    </FrameLayout>

    <Button
        android:id="@+id/earn_coins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buy_items"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="earn coins"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/earn_coins"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        android:background="@color/black"
        >

    </FrameLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/earn_coins"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="logout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>