<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_blue"
    tools:context=".UserProfileActivity"
    >

    <ImageView
        android:id="@+id/singlePostProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/doll_face"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/singlePostUsername"
        app:layout_constraintBottom_toTopOf="@+id/singlePostImage"
        android:background="@color/powder_blue"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/singlePostUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/singlePostProfilePic"
        app:layout_constraintLeft_toRightOf="@+id/singlePostProfilePic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/singlePostProfilePic"
        android:gravity="left"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="username"
        android:textStyle="bold"
        android:textAllCaps="true"
        />

    <ImageView
        android:id="@+id/singlePostImage"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:src="@drawable/doll_face"
        android:background="@color/powder_blue"
        app:layout_constraintTop_toBottomOf="@+id/singlePostProfilePic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginVertical="16dp"
        />

    <TextView
        android:id="@+id/singlePostLikesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 Likes"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/singlePostImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/singlePostLikeButton"
        android:layout_marginStart="12dp"
        />

    <Button
        android:id="@+id/singlePostLikeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singlePostImage"
        android:text="❤"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginEnd="12dp"
        android:textColor="@color/gold"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/singlePostCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/singlePostLikeButton"
        android:textSize="16sp"
        android:text="This is a sample caption."
        android:layout_marginHorizontal="12dp"
        android:paddingBottom="12dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>