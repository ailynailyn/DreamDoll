<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/insertdreamdolllogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dream_doll"
        app:layout_constraintBottom_toTopOf="@id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/orTV"
        android:background="@color/backgroundWhite"
        android:text="log in"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/orTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/loginButton"
        app:layout_constraintRight_toLeftOf="@+id/signupButton"
        app:layout_constraintTop_toTopOf="@+id/signupButton"
        app:layout_constraintBottom_toBottomOf="@+id/signupButton"
        />

    <Button
        android:id="@+id/signupButton"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:background="@color/backgroundWhite"
        app:layout_constraintLeft_toRightOf="@+id/orTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="sign up"
        android:textAllCaps="false"
        />


</androidx.constraintlayout.widget.ConstraintLayout>