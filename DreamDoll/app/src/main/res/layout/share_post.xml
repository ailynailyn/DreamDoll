<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/powder_blue"
    tools:context=".SharePostActivity"
    >

    <TextView
        android:id="@+id/sharePostTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="SHARE TO FEED"
        android:layout_margin="15dp"
        />


    <ImageView
        android:id="@+id/sharePostImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/doll_face"
        app:layout_constraintTop_toBottomOf="@+id/sharePostTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/sharePostCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sharePostImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:hint="Enter a caption"
        android:layout_margin="16dp"
        />


    <Button
        android:id="@+id/sharePostButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Share to newsfeed"
        app:layout_constraintTop_toBottomOf="@+id/sharePostCaption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/custom0menu0box0light"
        android:textColor="@color/white_blue"

        />

</androidx.constraintlayout.widget.ConstraintLayout>